{
	"language": "en-us",
	"theme": "default-borderless",
	"default-sorting": "ascending",
	"uses-markdown": true,
	"uses-ajax": true,
	"shows-reply-count": false,
	"allows-images": true,
	"allows-likes": true,
	"allows-dislikes": false,
	"uses-moderation": false,
	"pends-user-edits": false,
	"mail-type": "html",
	"mailer": "sendmail",
	"subscribes-user": true,
	"allows-user-replies": false,
	"sets-cookies": true,
	"cookie-expiration": "next month",
	"secure-cookies": true,
	"collapses-interface": false,
	"collapses-comments": true,
	"collapse-limit": 3,
	"popularity-threshold": 5,
	"popularity-limit": 2,
	"spam-database": "remote",
	"spam-check-modes": "php",
	"icon-mode": "image",
	"icon-size": 45,
	"gravatar-default": "retro",
