	"uses-user-timezone": true,
	"uses-short-dates": true,
	"login-method": "DefaultLogin",
	"allows-login": true,
	"uses-auto-login": true,
	"data-format": "xml",
	"default-name": "Commentatore anonimo sintassioso",
	"reply-mode": "thread",
	"stream-depth": 3,
	"image-format": "png",
	"appends-css": true,
	"appends-rss": true,
	"counts-deletions": true,
	"local-metadata": false,
	"stores-ip-address": false,
	"minifies-javascript": false,
	"minify-level": 1
}